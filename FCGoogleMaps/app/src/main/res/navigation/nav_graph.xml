<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Login â†’ SignUp or Main -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="edu.cs371m.fcgooglemaps.LoginFragment">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signUpFragment"/>
        <action
            android:id="@+id/action_login_to_main_graph"
            app:destination="@id/main_graph"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="edu.cs371m.fcgooglemaps.SignUpFragment">
        <action
            android:id="@+id/action_signUp_to_login"
            app:destination="@id/loginFragment"/>
        <action
            android:id="@+id/action_signUp_to_main_graph"
            app:destination="@id/main_graph"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <navigation
        android:id="@+id/main_graph"
        app:startDestination="@id/feedFragment">

        <fragment
            android:id="@+id/feedFragment"
            android:name="edu.cs371m.fcgooglemaps.FeedFragment"/>
        <fragment
            android:id="@+id/mapFragment"
            android:name="edu.cs371m.fcgooglemaps.MapFragment"/>
        <fragment
            android:id="@+id/notificationsFragment"
            android:name="edu.cs371m.fcgooglemaps.NotificationsFragment"/>
        <fragment
            android:id="@+id/profileFragment"
            android:name="edu.cs371m.fcgooglemaps.ProfileFragment"
            android:label="Profile">
            <argument
                android:name="userId"
                app:argType="string"
                android:defaultValue="@null" />
            <action
                android:id="@+id/action_profile_to_editCar"
                app:destination="@id/editCarFragment"/>
        </fragment>


        <fragment
            android:id="@+id/createPostFragment"
            android:name="edu.cs371m.fcgooglemaps.CreatePostFragment"/>
        <fragment
            android:id="@+id/editCarFragment"
            android:name="edu.cs371m.fcgooglemaps.EditCarFragment"/>

        <fragment
            android:id="@+id/editProfileFragment"
            android:name="edu.cs371m.fcgooglemaps.EditProfileFragment"
            android:label="Edit Profile"/>

    </navigation>

</navigation>
